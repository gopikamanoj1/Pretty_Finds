<script>
    function showCustomAlert(message) {
        Swal.fire({
            title: 'Alert',
            text: message,
            icon: 'error',
            confirmButtonText: 'OK'
        });
    }

    function validateBasic() {
        var name = document.basic.name.value;
        var price = document.basic.price.value;
        var category = document.basic.category.value;
        var stock = document.basic.stock.value;
        var image = document.basic.image.value;

        if (name === "" || price === "" || category === "" || stock === "" || image === "") {
            showCustomAlert("Please fill in all fields.");
            return false;
        }

        if (price == 0) {
            showCustomAlert("Invalid price. Please enter a valid numerical price.");
            return false;
        }

        if (stock == 0) {
            showCustomAlert("Invalid stock. Please enter a valid numerical stock.");
            return false;
        }

        // Validate price
        var priceRegex = /^\d+(\.\d{1,2})?$/;
        if (!priceRegex.test(price)) {
            showCustomAlert("Invalid price. Please enter a valid numerical price.");
            return false;
        }

        // Validate name
        var nameRegex = /^[A-Za-z\s]+$/;
        if (!nameRegex.test(name)) {
            showCustomAlert("Name should only contain letters and spaces.");
            return false;
        }

        // Validate stock
        var stockRegex = /^\d+$/;
        if (!stockRegex.test(stock)) {
            showCustomAlert("Invalid stock. Please enter a valid numerical stock quantity.");
            return false;
        }

        // Validate image (you might want to add more checks based on your requirements)

        return true;
    }
</script>

    
