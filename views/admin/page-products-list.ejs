                <% if (locals.data) { %>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>IMAGE</th>
                                <th>PRODUCT NAME</th>
                                <th>CATEGORY NAME</th>
