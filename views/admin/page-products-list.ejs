                        </thead>
                        <tbody>
                            <% products.forEach(function(product,index) { %>
                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td>
                                        <% if (product.image && product.image.length > 0) { %>
                                          <% product.image.forEach((image) => { %>
                                            <img src="/uploads/<%= image.url %>" alt="Product Image">
                                          <% }); %>
                                        <% } else { %>
                                          <!-- Provide an alternative content or message when there are no images -->
                                        <% } %>
                                      </td>
                                      
                                    
                                    <td>
                                        <%= product.name %>
                                    </td>
                                    <td>
                                        <% if (product.category) { %>
                                            <%= product.category.name %> <!-- Assuming 'name' is the field in the AdminCategory schema that contains the category name -->
                                        <% } else { %>
                                            No Category
                                        <% } %>
                                        
                                    </td>
                                    <td>
                                        <%= product.price %>
                                    </td>
                                    <td >
                                        <%= product.description %>
                                    </td>
                                    <td >
                                        <%= product.stock %>
                                    </td>
                                    <a href="/edit/<%= product.id %>">
                                    </a>

                                    <td class="text-end">
                                        <!-- Add your action buttons here -->
                                        <!-- Example: Edit and Delete buttons -->
                                        <a href="/editProduct/<%= product.id %>" class="btn btn-primary">Edit</a>
                                        <a href="/deleteProduct/<%= product.id %>" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>
